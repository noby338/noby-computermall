<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniuxy.financialmanage.dao.PurchaseOrderItemDao">

    <resultMap type="com.woniuxy.commonentity.entity.PurchaseOrderItem" id="PurchaseOrderItemMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="purchaseOrderId" column="purchase_order_id" jdbcType="INTEGER"/>
        <result property="modelId" column="model_id" jdbcType="INTEGER"/>
        <result property="num" column="num" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PurchaseOrderItemMap">
        select
          id, purchase_order_id, model_id, num
        from purchase_order_item
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PurchaseOrderItemMap">
        select
          id, purchase_order_id, model_id, num
        from purchase_order_item
        <where>
            <if test="purchaseOrderItem.id != null">
                and id = #{purchaseOrderItem.id}
            </if>
            <if test="purchaseOrderItem.purchaseOrderId != null">
                and purchase_order_id = #{purchaseOrderItem.purchaseOrderId}
            </if>
            <if test="purchaseOrderItem.modelId != null">
                and model_id = #{purchaseOrderItem.modelId}
            </if>
            <if test="purchaseOrderItem.num != null">
                and num = #{purchaseOrderItem.num}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from purchase_order_item
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="purchaseOrderId != null">
                and purchase_order_id = #{purchaseOrderId}
            </if>
            <if test="modelId != null">
                and model_id = #{modelId}
            </if>
            <if test="num != null">
                and num = #{num}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into purchase_order_item(purchase_order_id, model_id, num)
        values (#{purchaseOrderId}, #{modelId}, #{num})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update purchase_order_item
        <set>
            <if test="purchaseOrderId != null">
                purchase_order_id = #{purchaseOrderId},
            </if>
            <if test="modelId != null">
                model_id = #{modelId},
            </if>
            <if test="num != null">
                num = #{num},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from purchase_order_item where id = #{id}
    </delete>

</mapper>

