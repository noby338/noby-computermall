<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniuxy.cooperationmanage.dao.ModelDao">

    <resultMap type="com.woniuxy.cooperationmanage.entity.Model" id="ModelMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="supplierId" column="supplier_id" jdbcType="INTEGER"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="states" column="states" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ModelMap">
        select
          id, name, supplier_id, price, states
        from model
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ModelMap">
        select
          id, name, supplier_id, price, states
        from model
        <where>
            <if test="model.id != null">
                and id = #{model.id}
            </if>
            <if test="model.name != null and model.name != ''">
                and name = #{model.name}
            </if>
            <if test="model.supplierId != null">
                and supplier_id = #{model.supplierId}
            </if>
            <if test="model.price != null">
                and price = #{model.price}
            </if>
            <if test="model.states != null">
                and states = #{model.states}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from model
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="supplierId != null">
                and supplier_id = #{supplierId}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="states != null">
                and states = #{states}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into model(name, supplier_id, price, states)
        values (#{name}, #{supplierId}, #{price}, #{states})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update model
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="supplierId != null">
                supplier_id = #{supplierId},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="states != null">
                states = #{states},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from model where id = #{id}
    </delete>

</mapper>

