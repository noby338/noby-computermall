<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniuxy.salesmanage.dao.SaleCartDao">

    <resultMap type="com.woniuxy.commonentity.entity.SaleCart" id="SaleCartMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="totalPrice" column="total_price" jdbcType="NUMERIC"/>
        <result property="clientId" column="client_id" jdbcType="INTEGER"/>
        <association property="client" column="client_id"  javaType="client" select="selectClientById"/>
        <collection property="saleCartItemList" column="id" ofType="saleCartItem" select="selectSaleCartItemById"/>
    </resultMap>
    <select id="selectClientById" resultType="client">
        select
            id, name, phone_num
        from client
        where id = #{client_id}
    </select>
    <select id="selectSaleCartItemById" resultType="saleCartItem">
        select
            id, num, sale_price, sale_order_id, model_id, sale_cart_id
        from sale_cart_item
        where sale_cart_id=#{id};
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="SaleCartMap">
        select
          id, total_price, client_id
        from sale_cart
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SaleCartMap">
        select
          id, total_price, client_id
        from sale_cart
        <where>
            <if test="saleCart.id != null">
                and id = #{saleCart.id}
            </if>
            <if test="saleCart.totalPrice != null">
                and total_price = #{saleCart.totalPrice}
            </if>
            <if test="saleCart.clientId != null">
                and client_id = #{saleCart.clientId}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from sale_cart
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="totalPrice != null">
                and total_price = #{totalPrice}
            </if>
            <if test="clientId != null">
                and client_id = #{clientId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sale_cart(total_price, client_id)
        values (#{totalPrice}, #{clientId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sale_cart
        <set>
            <if test="totalPrice != null">
                total_price = #{totalPrice},
            </if>
            <if test="clientId != null">
                client_id = #{clientId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sale_cart where id = #{id}
    </delete>

</mapper>

